{
  "name": "miband-watchface-tool",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "parcel build --dist-dir dist/assets src/index.html && cp src/sw.js dist/assets/",
    "postbuild:frontend": "rm dist/assets/*.map",
    "build:backend": "cd server && tsc && cp -rf dist/ ../dist",
    "docker:build": "docker build -t pixel-app .",
    "docker:start": "docker run --name wf-app -v /etc/letsencrypt/live/$DOMAIN:/opt/app/ssl -v /etc/letsencrypt/archive:/opt/archive -d -p 443:443 pixel-app",
    "docker:stop": "docker stop wf-app || true && docker rm -f wf-app || true",
    "start": "node dist/app",
    "dev": "node scripts/dev",
    "lint": "npm run lint:ts",
    "lint:ts": "eslint '**/*.ts'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.2.1",
    "@parcel/transformer-sass": "^2.2.1",
    "@parcel/transformer-webmanifest": "^2.2.1",
    "@types/color-convert": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.15",
    "@types/sharp": "^0.29.5",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "color-convert": "^2.0.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "nodemon": "^2.0.15",
    "parcel": "^2.2.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@simonwep/pickr": "^1.8.2",
    "express": "^4.17.2",
    "express-async-handler": "^1.2.0",
    "sharp": "^0.30.0"
  }
}
